{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pico-info",
            "type": "shell",
            "command": "picotool info",
            "problemMatcher": []
        },
        {
            "label": "app-time",
            "type": "shell",
            "windows":{"command": "(gci lib/app/alert.c).LastWriteTime = Get-Date"},
            "osx":{"command": "touch lib/app/alert.c"},
            "linux":{"command": "touch lib/app/alert.c"},
            "problemMatcher": [],
            "dependsOn": []
        },
        {
            "label": "app-load",
            "type": "shell",
            "command": "picotool reboot -f -u; sleep 2; picotool load build/rp2040/app_rp2040_metro.bin; picotool reboot",
            "problemMatcher": [],
            "dependsOn": ["app-build"]
        },
        {
            "label": "app-config",
            "type": "shell",
            "command": "cmake -S main/rp2040 -B build/rp2040 -G 'Unix Makefiles'",
            "problemMatcher": []
        },
        {
            "label": "app-build",
            "type": "shell",
            "command": "cmake --build build/rp2040",
            "problemMatcher": [],
            "dependsOn": ["app-time"]
        },
        {
            "label": "app-rebuild",
            "type": "shell",
            "command": "cmake --build build/rp2040 --clean-first",
            "problemMatcher": []
        },
        {
            "label": "test-config",
            "type": "shell",
            "command": "cmake -S main/unittest -B build/unittest -G 'Unix Makefiles'",
            "problemMatcher": []
        },
        {
            "label": "test-build",
            "type": "shell",
            "command": "cmake --build build/unittest",
            "problemMatcher": []
        },
        {
            "label": "test-run",
            "type": "shell",
            "windows":{"command": "./build/unittest/rs_unittest.exe"},
            "osx":{"command": "./build/unittest/rs_unittest"},
            "linux":{"command": "./build/unittest/rs_unittest"},
            "problemMatcher": [],
            "dependsOn":["test-build"]
        },
        {
            "label": "test-rebuild",
            "type": "shell",
            "command": "cmake --build build/unittest --clean-first",
            "problemMatcher": []
        }
    ]
}